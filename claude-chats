#!/bin/bash
# claude-chats - Browse, resume, and manage Claude Code conversations
_resume=$(mktemp /tmp/.claude-chats-resume.XXXXXX)
_CLAUDE_CHATS_RESUME=$_resume python3 ~/bin/.claude-chats.py "$@"
if [ -s "$_resume" ]; then
    dir=$(head -1 "$_resume")
    cmd=$(tail -1 "$_resume")
    rm -f "$_resume"
    mkdir -p "$dir" 2>/dev/null
    cd "$dir" && exec $cmd
fi
rm -f "$_resume"
